<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="logaligroup.sapui5.controller.HelloPanel" xmlns:core="sap.ui.core" displayBlock="true">
    <Panel headerText="{i18n>HelloPanel}" id="_IDGenPanel1" class="sapUiResponsiveMargin" width="auto">
        <content>
<!-- <Text id="text" text="{i18n>HelloWorld}"></Text> -->
            <Button icon="sap-icon://action" id="buttonHellDia" text="{i18n>ShowHelloDialog}" press=".OnOpenDialog" class="sapUiSmallMarginEnd"></Button>
            <Button id="buttonHello" text="{i18n>ShowHelloButton}" press=".OnShow" class="sapUiSmallMarginEnd"></Button>
            <Input id="in" value="{/recipient/name}" width="60%" valueLiveUpdate="true"></Input>
            <Text id="_IDGenText1" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"></Text>
        </content>
    </Panel>
    <core:Fragment id="_IDGenFragment1" fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>
</mvc:View>