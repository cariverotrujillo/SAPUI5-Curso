<mvc:View controllerName="logaligroup.sapui5.controller.InvoicesList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List id="_IDGenList1" headerText="{i18n>invoiceList}"
                           class="sapUiResonsiveMargin" 
                           width="auto" 
                           items="{ path: 'northwind>/Invoices',
                                    sorter: {path: 'ProductName',
                                             group: true}}">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1">
                <Title id="_IDGenTitle1" text="{i18n>invoiceList}"></Title>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
                <SearchField id="_IDGenSearchField1" width="50%" search=".onFilterInvoice"></SearchField>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem id="_IDGenObjectListItem1" title="{northwind>Quantity} x {northwind>ProductName}"
                                               number="{ parts: [{path: 'northwind>ExtendedPrice'},
                                                                {path: 'currency>/eur'}],
                                                        type:'sap.ui.model.type.Currency',
                                                        formatOptions: {
                                                            showMeasure : false
                                                        }}"
                                            numberUnit= "{currency>/eur}" 
                                            numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}">
         <!--        <firstStatus>
                    <ObjectStatus id="_IDGenObjectStatus1" text="{ path: 'northwind>Status',
                                            formatter: '.formatter.invoiceStatus'}"></ObjectStatus>
                </firstStatus> -->
            </ObjectListItem>
        </items>
    </List>
</mvc:View>